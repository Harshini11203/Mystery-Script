<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".s2l1">

    <!-- Top Section (Menu Button & Title) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/men"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:contentDescription="Menu"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Title -->

    </RelativeLayout>

    <!-- Level Title and Play Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="LEVEL 1"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <!-- Play Button -->
        <Button
            android:id="@+id/btnPlayAudio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#DAFF80"
            android:drawableLeft="@drawable/baseline_spatial_audio_off_24"
            android:drawableTint="#000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
    </RelativeLayout>

    <!-- Star Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star1"
            android:src="@drawable/baseline_star_outline_24" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star2"
            android:src="@drawable/baseline_star_outline_24" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star3"
            android:src="@drawable/baseline_star_outline_24" />
    </LinearLayout>

    <!-- Scrollable Text Container -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_rectangle"
        android:padding="12dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/tvRunningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:lineSpacingExtra="10sp"
            android:text="In 2016, Bengaluru saw one of the most sophisticated ATM fraud cases in India..." />
    </ScrollView>

    <!-- Question -->
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What common link did investigators find among victims?"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@drawable/wavy_rectangle"/>

    <!-- Multiple Choice Answers -->
    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Same bank account type"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lived in the same area"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used the same ATM in Koramangala"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared passwords with others"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/stampImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/redstamp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:layout_marginBottom="20dp"/>

    <!-- Submit Button -->
    <ImageButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_double_arrow_right_24"/>
</LinearLayout>

