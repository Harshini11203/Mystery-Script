<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DAFF80"/>  <!-- Semi-transparent light green shadow -->
            <corners android:radius="20dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Main White Rectangle with Black Outline -->
    <item android:left="5dp" android:top="5dp" android:bottom="25dp" android:right="25dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- White fill -->
            <stroke android:width="2dp" android:color="#000000"/>  <!-- Black outline -->
            <corners android:radius="20dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>